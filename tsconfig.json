{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src", "tests", "vitest.config.ts"],
  "exclude": ["src/**/*.test.ts"]
}
